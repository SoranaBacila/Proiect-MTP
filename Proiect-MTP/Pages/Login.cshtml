@page
@model Proiect_MTP.Pages.LoginModel
@{
    Layout = null;
}

<head>

    <style>

        * {
            box-sizing: border-box
        }

        /* Full-width input fields */
        input[type=text], input[type=password] {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }

            input[type=text]:focus, input[type=password]:focus {
                background-color: #ddd;
                outline: none;
            }

        /* Overwrite default styles of hr */
        hr {
            border: 4px solid #f1f1f1;
            margin-bottom: 25px;
        }

        /* Set a style for the submit/register button */
        .registerbtn {
            background-color: deeppink;
            color: white;
            padding: 30px 40px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            opacity: 0.3;
        }

            .registerbtn:hover {
                opacity: 1;
            }

        /* Add a blue text color to links */
        a {
            color: deeppink;
        }

        /* Set a grey background color and center the text of the "sign in" section */
        .signin {
            background-color: deeppink;
            text-align: center;
        }

        body {
            font-family: 'Times New Roman', sans-serif;
            background-color: pink;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: pink;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            font-size: 63px;
            margin-bottom: 12px;
        }

        h2 {
            font-size: 24px;
            margin-top: 50px;
            margin-bottom: 20px;
        }

        p {
            font-size: 16px;
            line-height: 1.5;
            margin-bottom: 20px;
        }

        #alert-message {
            display: none;
            background-color: #f44336;
            color: white;
            padding: 10px;
            text-align: center;
            font-size: 16px;
        }

            #alert-message p {
                margin: 0;
            }

            #alert-message.show {
                display: block;
            }

    </style>

</head>

<body>
<form method="POST">

    <div class="container">
            <h1>Conecteaza-te pentru a salva un suflet ☺ </h1>
        <p>Completeaza aceste campuri pentru a te putea loga in aplicatia noastra.</p>
        <hr>
        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Introduceti adresa de email" name="email" id="email" required>

        <label for="psw"><b>Parola</b></label>
        <input type="password" placeholder="Introduceti parola dvs" name="parola" id="parola" required>
        <hr>

        @if (Model.errorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                 <strong>@Model.errorMessage</strong>
             </div>
        }

        <button type="submit" class="registerbtn">Conecteaza-te</button>
    </div>

    <div class="container signin">
        <p>Vrei sa iti faci un nou cont? <a href="Register">Apasa aici</a>.</p>
    </div>
</form>
</body>

